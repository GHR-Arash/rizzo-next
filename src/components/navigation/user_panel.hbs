<a class="avatar" href="//www.lonelyplanet.com/thorntree/profiles/{{user.profileSlug}}{{#if user.notification_count}}/messages{{/if}}">
  {{#if user.notification_count}}
    <span class="notification-badge">{{user.notification_count}}</span>
  {{/if}}

  <img src="{{user.avatar}}" alt="{{user.username}} avatar">
</a>

<div class="sub-navigation">
  <a class="user-panel__sign-out icon-sign-out" href="//auth.lonelyplanet.com/users/sign_out">Sign out</a>

  <div class="user-panel__header">
    <a href="//www.lonelyplanet.com/thorntree/profiles/{{user.profileSlug}}">
      <img class="user-panel__avatar avatar" src="{{user.avatar}}" alt="{{user.username}} avatar">
      <span class="user-panel__name">{{user.username}}</span>
    </a>
  </div>

  <div class="tabs tabs--full tabs--small">
    <ul class="tabs__links">
      <li>
        <a href="#activity">
          Recent activity
        </a>
      </li>

      <li>
        <a href="#messages">
          Messages

          {{#if user.unread_message_count}}
            <span class="unread-count">
              {{user.unread_message_count}}
            </span>
          {{/if}}
        </a>
      </li>
    </ul>

    <div class="user-panel__content tabs__content" id="activity">
      {{#unless user.activities}}
        <div class="user-panel__empty">
          No recent activity
        </div>
      {{/unless}}

      {{#if user.activities}}
        <div class="user-panel__scroll">
          <ul class="user-panel__items">
            <li>
              <a href="#">
                Something happened and this is it.
                <time>Just now</time>
              </a>
            </li>

            <li>
              <a href="#">
                Your order <strong>5738432</strong> has been shipped.
                <time>5 hours ago</time>
              </a>
            </li>

            <li>
              <a href="#">
                This is another message and it's a bit longer so it wraps to two lines.
                <time>5 hours ago</time>
              </a>
            </li>
          </ul>

          <a class="user-panel__link" href="#">
            See all activity
          </a>
        </div>
      {{/if}}
    </div>

    <div class="user-panel__content tabs__content" id="messages">
      {{#unless user.messages}}
        <div class="user-panel__empty">
          No new messages
        </div>
      {{/unless}}

      {{#if user.messages}}
        <div class="user-panel__scroll">
          <ul class="user-panel__items">
            {{#each user.messages}}
              {{{text}}}
            {{/each}}
          </ul>

          <a class="user-panel__link" href="//www.lonelyplanet.com/thorntree/profiles/{{user.profileSlug}}/messages">
            See all messages
          </a>
        </div>
      {{/if}}
    </div>
  </div>

  <a class="sub-navigation__button" href="//www.lonelyplanet.com/thorntree">
    Go to Thorn Tree Travel Forum
    <i class="icon-chevron-right" aria-hidden="true"></i>
  </a>
</div>
