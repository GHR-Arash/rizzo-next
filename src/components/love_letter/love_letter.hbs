<article id="introduction" class="love-letter">
  <h2 class="love-letter__heading">{{{love_letter_title}}}</h2>

  <p class="love-letter__text">
    &ldquo;<span class="js-love-letter">{{{love_letter_text}}}</span>&rdquo;

    {{#if love_letter_more}}
    <a class="love-letter__more" href="{{love_letter_more}}" target="_blank">
      Read More
      <span class="icon-chevron-right"></span>
    </a>
    {{/if}}
  </p>

  {{#if love_letter.author.name }}
    <div class="love-letter__author">
      <a href="{{love_letter.author.url}}">
        <img class="love-letter__author__image" src="{{love_letter.author.image}}" />
      </a>
      <div class="love-letter__author__creds">
        <div class="love-letter__author__creds__name"><a href="{{love_letter.author.url}}">{{love_letter.author.name}}</a></div>
        <div class="love-letter__author__creds__title"><a href="{{love_letter.author.url}}">{{love_letter.author.title}}</a></div>
      </div>
    </div>
  {{/if}}
</article>
