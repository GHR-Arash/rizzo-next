{
  "parser": "babel-eslint",
  "globals": {
    "$": true,
    "Modernizr": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "quotes": [1, "double"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "strict": [0, "never"],
    "no-var": [1],
    "no-unused-vars": [1],
    "react/jsx-uses-vars": 1
  },
  "plugins": [
    "react"
  ],
  "ecmaFeatures": {
    "jsx": true
  }
}
