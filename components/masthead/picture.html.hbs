<picture>
  <!--[if IE 9]><video style="display: none;"><![endif]-->
  <source
    media="(min-width: 1230px)"
    srcset="{{large.normal}} 1x,
            {{large.hq}} 2x,
            {{large.lossless}} 3x">
  <source
    media="(min-width: 717px)"
    srcset="{{medium.normal}} 1x,
            {{medium.hq}} 2x,
            {{medium.lossless}} 3x">

  <source
    media="(min-width: 375px)"
    srcset="{{small.normal}} 1x,
            {{small.hq}} 2x,
            {{small.lossless}} 3x">
  <!--[if IE 9]></video><![endif]-->

  <img
    srcset="{{small.normal}} 1x,
            {{small.hq}} 2x,
            {{small.lossless}} 3x"
    class="masthead__images__image">
</picture>
