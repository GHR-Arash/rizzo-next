<div class="articles" data-lp-initial-articles="{{destinations.articles.to_json}}" data-lp-initial-caption="{{destinations.caption}}">
  <h1 class="articles__header--text">{{destinations.caption}}</h1>
  <p>{{destinations.caption}}</p>
  <ul class="articles-list__container">
    {{#each destinations.articles}}
    <li class="articles-list__item" style="background-image:url({{banner_image}})">{{name}}</li>
    {{/each}}
  </ul>
  <button class="button">Get All</button>
</div>
